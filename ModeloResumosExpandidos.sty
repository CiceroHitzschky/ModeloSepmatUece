% ========== PACOTES ==========
\RequirePackage[portuguese]{babel}
\RequirePackage{graphicx}
\RequirePackage{setspace}
\RequirePackage{caption}
\RequirePackage{float}
\RequirePackage{indentfirst}
\RequirePackage[left=2.25cm, right=2.25cm, top=2.5cm, bottom=2.5cm]{geometry}

% ========== CONFIGURAÇÕES ==========
% Parágrafo
\setlength{\parindent}{1cm}
\singlespacing

% Seções
\RequirePackage{titlesec}
\titlespacing*{\section}{0pt}{12pt}{0pt}

% Legendas
\captionsetup[figure]{labelfont=bf, labelsep=period, justification=centering, singlelinecheck=false}
\captionsetup[table]{labelfont=bf, labelsep=period, justification=centering, singlelinecheck=false}

% Cabeçalho/rodapé
\RequirePackage{fancyhdr}
\RequirePackage{etoolbox}

\pagestyle{fancy}
\fancyhf{}
\renewcommand{\headrulewidth}{0pt}

% Configurações padrão do cabeçalho (usuário pode sobrescrever)
\newcommand{\configurarAutores}[1]{\fancyhead[L]{\footnotesize #1}}
\newcommand{\configurarRodape}[1]{\fancyfoot[R]{\footnotesize #1}}

% Estilo da primeira página
\fancypagestyle{plain}{%
    \fancyhf{}
    \renewcommand{\headrulewidth}{0pt}
}

% ========== COMANDOS PERSONALIZADOS ==========

% Logo
\newcommand{\logoSepmat}{%
    \begin{figure}[H]
        \centering
        \includegraphics[width=5.6in, height=1.4in]{lib/logoSepmat.png}
    \end{figure}%
}

% Título
\newcommand{\titulo}[1]{%
    \begin{center}
        \textbf{\large #1}
    \end{center}%
}

% Resumo
\RequirePackage{xparse}

\NewDocumentCommand{\resumo}{m m}{%
    % #1 = texto do resumo
    % #2 = palavras-chave
    \begin{quote}
        \textbf{RESUMO.} #1\par\medskip
        
        \textbf{Palavras-chave:} #2.
    \end{quote}%
}
% Seção personalizada
\newcommand{\secao}[1]{%
    \section*{\normalsize\textbf{#1}}%
}


% Referencias

\RequirePackage[backend=biber, style=abnt]{biblatex}

% Configura heading da bibliografia como seção numerada
\defbibheading{bibliography}[\refname]{%
    \section{#1}%
}

\newcommand{\referencias}{%
    \begin{singlespace}
    \printbibliography
    \end{singlespace}%
}

